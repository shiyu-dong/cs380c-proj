#include "Halide.h"
#define RESULT_TYPE int

using namespace Halide;

int main(int argc, char **argv) {
    Var x, y;
    Func f(x,y), g(x,y), h(x,y);

    printf("Defining function...\n");

    f(x, y) = max(x, y);
    g(x, y) = 17 * f(x, y);        
    h(x, y) = (g(x, y-1) + g(x-1, y) + g(x, y) + g(x+1, y) + g(x, y+1));
        
    //h.chunk(root);
    //g.chunk(root, y); // chunk it at z, but compute it at x
    //f.root();
    
    Image<int> imh = h.realize(32, 32);

    bool success = true;

    // Check the result was what we expected
    for (int i = 0; i < 32; i++) {
        for (int j = 0; j < 32; j++) {
            int v1 = max(i-1, j);
            int v2 = max(i+1, j);
            int v3 = max(i, j);
            int v4 = max(i, j-1);
            int v5 = max(i, j+1);
            int correct = 17 * (v1 + v2 + v3 + v4 + v5);

            int val = imh(i, j, 0);
            if (val != correct) {
                printf("imh(%d, %d) = %d instead of %d\n", 
                       i, j, val, correct);
                success = false;
            }
        }
    }

    if (!success) return -1;

    printf("Success!\n");
    return 0;
}
