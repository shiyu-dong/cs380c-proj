#include "Halide.h"
#define RESULT_TYPE float
using namespace Halide;

int main(int argc, char **argv) {
    int W=8192;
    int H=8192;

    Var x, y;
    Image<float> im(W, H);
    Func f(x[1],y), g(x,y);

    f(x,y) = min(min(im(x-1,y), im(x,y)), im(x+1, y));
    g(x,y) = f(x,y)/3;

    f.root();
    f.tile(x, xTile, 16, y, yTile, 32);
    f.parallel(xTile);
    //f.vectorize();

    Image<float> img = g.realize(W, H);
    printf("Success!\n");

    return 0;
}
