#include "Halide.h"
#include <assert.h>
#include <iostream>

#define RESULT_TYPE int
using namespace Halide;

int main(int argc, char **argv) {
    int W=32;
    int H=32;

    Var x, y;
    Func f(x[-1],y), g(x,y);

    f(x, y) = max(x, y);
    g(x, y) = min(x, y);

    Image<int> imf = f.realize(W, H);
    Image<int> img = g.realize(W, H);

    for(int i=0; i<32; i++) {
      for(int j=0; j<32; j++) {
        assert(imf.base[i*32+j] == max(i, j));
      }
    }

    return 0;
}
