#include "Halide.h"

#define RESULT_TYPE int
using namespace Halide;

int main(int argc, char **argv) {
    Var x, y;//, z;
    Func f(x[1],y), g(x,y);

    g(x, y) = x*y;
    f(x, y) = g(x-1, y) + g(x+1, y);


    //g.chunk(y);
    g.tile(x, xTile, 2);
    g.tile(y, yTile, 4);
    f.tile(x, xTile, 2);
    f.parallel(y);
    f.parallel(x);

    Image<int> im = f.realize(8, 8);

    for (int x = 1; x < 7; x++) {
        for (int y = 0; y < 8; y++) {
            if (im(x, y) != (x-1)*y + (x+1)*y) {
                printf("im(%d, %d) = %d\n", x, y, im(x, y));
                return -1;
          }
        }
    }

    printf("Success!\n");
    return 0;
}


