#include <Halide.h>

#define RESULT_TYPE int
using namespace Halide;

int main(int argc, char **argv) {

    Func fib(x, r), g(x);
    Var x;
    RDom r(2, 20);

    fib(x) = 1; 
    fib(r.x) = fib(r.x-2) + fib(r.x-1);

    fib.parallel(x);
    g(x) = fib(x);
    g.tile(x, xTile, 4);
    g.parallel(x);

    Image<int> out = g.realize(20);

    int fib_ref[20];
    fib_ref[0] = fib_ref[1] = 1;
    for (int i = 2; i < 20; i++) {
        fib_ref[i] = fib_ref[i-1] + fib_ref[i-2];
        if (fib_ref[i] != out(i)) {
          printf("out(%d) = %d instead of %d\n", i, out(i), fib_ref[i]);
          return -1;
        }
    }    

    printf("Success!\n");

    return 0;

}
