#include "Halide.h"

#define RESULT_TYPE int
using namespace Halide;

int main(int argc, char **argv) {
    Var x;
    Func f(x), g(x);

    int k = 3;

    f(x) = x*k;
    g(x) = x+k;
    f.tile(x, xTile, 4);
    g.tile(x, xTile, 4);
    f.parallel(xTile);
    g.parallel(xTile);

    Image<int> im = f.realize(16);

    for (int i = 0; i < 16; i++) {
        if (im(i) != i*3) {
            printf("im(%d) = %d\n", i, im(i));
            return -1;
        }
    }

    printf("Success!\n");
    return 0;
}
